{
  "name": "toolkit",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "yarn": "Please use NPM!",
    "pnpm": "Please use NPM!"
  },
  "packageManager": "npm@8.15.0",
  "workspaces": [
    "apps/*",
    "internals/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "audit": "npm audit --omit dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "storybook": "turbo run dev --filter storybook",
    "website": "npm turbo run dev --filter website",
    "release": "turbo run release --filter=@codedazur/*",
    "deploy": "turbo run deploy --filter=infrastructure",
    "destroy": "turbo run destroy --filter=infrastructure"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest",
    "@changesets/cli": "^2.26.0"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.6"
  }
}
