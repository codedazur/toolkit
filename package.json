{
  "name": "toolkit",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "yarn": "Please use NPM!",
    "pnpm": "Please use NPM!"
  },
  "packageManager": "npm@8.19.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "audit": "npm audit --omit-dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "storybook": "turbo run dev --filter storybook",
    "website": "npm turbo run dev --filter website",
    "release": "turbo run release --filter=@codedazur/*",
    "deploy": "turbo run deploy --filter=infrastructure",
    "destroy": "turbo run destroy --filter=infrastructure",
    "lint&test": "turbo run lint test --filter=@codedazur/*",
    "build-packages": "turbo run build --filter=@codedazur/*",
    "publish-packages": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "^2.26.0",
    "@codedazur/eslint-config": "*",
    "prettier": "latest",
    "tsup": "^6.5.0",
    "turbo": "latest",
    "vitest": "^0.30.1"
  }
}
