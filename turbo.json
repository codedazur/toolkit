{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "develop": {
      "cache": false,
      "persistent": true
    },
    "audit": {},
    "lint": {
      "dependsOn": ["@codedazur/eslint-config#build"]
    },
    "types": {
      "dependsOn": ["^build", "@codedazur/eslint-config#build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build", "audit", "lint", "test"],
      "outputs": ["dist/**", ".next/**", ".storybook/**"]
    },
    "@codedazur/eslint-config#build": {
      "dependsOn": ["^build", "audit", "test"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "env": ["CDK_DEFAULT_ACCOUNT", "CDK_DEFAULT_REGION", "DOMAIN_NAME"]
    },
    "destroy": {
      "env": ["CDK_DEFAULT_ACCOUNT", "CDK_DEFAULT_REGION"]
    }
  }
}
