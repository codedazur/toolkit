{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "lint": {},
    "test": {},
    "audit": {},
    "build": {
      "dependsOn": ["lint", "test", "^build"],
      "outputs": ["dist/**", ".next/**", ".storybook/**"]
    },
    "deploy": {
      "dependsOn": ["audit", "build"]
    },
    "infrastructure#deploy": {
      "dependsOn": ["website#build", "storybook#build"],
      "env": ["CDK_DEFAULT_ACCOUNT", "CDK_DEFAULT_REGION", "DOMAIN_NAME"]
    },
    "infrastructure#destroy": {
      "env": ["CDK_DEFAULT_ACCOUNT", "CDK_DEFAULT_REGION"]
    },
    "dev": {
      "cache": false
    }
  }
}
