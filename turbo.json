{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "develop": {
      "cache": false,
      "persistent": true
    },
    "audit": {},
    "lint": {},
    "types": {},
    "test": {
      "dependsOn": [
        "^build"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "audit",
        "lint",
        "test"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        ".storybook/**"
      ]
    },
    "deploy": {
      "env": [
        "CDK_DEFAULT_ACCOUNT",
        "CDK_DEFAULT_REGION",
        "DOMAIN_NAME"
      ]
    },
    "destroy": {
      "env": [
        "CDK_DEFAULT_ACCOUNT",
        "CDK_DEFAULT_REGION"
      ]
    }
  }
}
