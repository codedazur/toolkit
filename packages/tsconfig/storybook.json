{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Storybook",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
